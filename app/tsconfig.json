{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strict": true,
    "target": "ES2018",
    "inlineSourceMap": true,
    "types": ["node"],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": ["./src", "./types"]
}
